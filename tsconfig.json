{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "angular/**/*.ts",
    "vue/**/*.ts",
    "react/**/*.ts",
    "svelte/**/*.ts",
    "test/**/*.ts"
  ]
}
